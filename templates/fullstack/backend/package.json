{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "rm -rf dist && yarn build:src",
    "build:src": "tsc --build tsconfig.json",
    "build:start": "yarn build && node ./dist/main.js",
    "start:dev": "ts-node-dev --files --ignore-watch node_modules -r tsconfig-paths/register -- src/main.ts",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js --config ormconfig.ts",
    "migration:generate": "yarn typeorm migration:generate -- -n",
    "migration:create": "yarn typeorm migration:create -- -n -d ",
    "migration:up": "yarn typeorm migration:run",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@nestjs/common": "^8.4.4",
    "@nestjs/core": "^8.4.4",
    "@nestjs/platform-express": "^8.4.4",
    "@nestjs/typeorm": "^8.0.3",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.2",
    "chalk": "^4.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "config": "^3.3.7",
    "cookie-parser": "^1.4.6",
    "express": "^4.18.1",
    "jsonwebtoken": "^8.5.1",
    "on-headers": "^1.0.2",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.5.5",
    "sqlite3": "^5.0.6",
    "typeorm": "0.2.45",
    "ws": "^8.6.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/body-parser": "^1.19.2",
    "@types/config": "^0.0.41",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/on-headers": "^1.0.0",
    "@types/sqlite3": "^3.1.8",
    "source-map-support": "^0.5.21",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.14.0"
  }
}
